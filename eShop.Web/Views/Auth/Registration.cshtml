@{
    Layout = "_LayoutAuth";
}
@{ List<string> info = ViewData["info"] as List<string>;}

            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">რეგისტრაცია</h3></div>
                        <div class="card-body">
                            @if (info != null && info.Count > 0)
                            {
                                @foreach (var item in info)
                                {
                                    <div class="form-floating mb-3"> @item </div>
                                }
                            }

                            <form method="post" asp-controller="Auth" asp-action="Registration">
                                <div class="form-floating mb-3">
                                    <input class="form-control" name="Email" id="inputEmail" type="email" placeholder="name@example.com" />
                                    <label for="inputEmail">ელ. ფოსტა</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input class="form-control" name="FirstName" id="inputFirstName" type="text" placeholder="სახელი" />
                                    <label for="inputFirstName">სახელი</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input class="form-control" name="LastName" id="inputLastName" type="text" placeholder="გვარი" />
                                    <label for="inputLastName">გვარი</label>
                                </div>

                                <div class="form-floating mb-3">
                                    <input class="form-control" name="PasswordHash" id="inputPassword" type="password" placeholder="Password" />
                                    <label for="inputPassword">პაროლი</label>
                                </div>

                                <div class="form-floating mb-3">
                                    <input class="form-control" name="RepeatPasswordHash" id="inputRepeatPasswordHash" type="password" placeholder="Password" />
                                    <label for="inputRepeatPasswordHash">გაიმეორე პაროლი</label>
                                </div>

                                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                    <button type="submit" class="btn btn-primary">რეგისტრაცია</button>
                                    <a href="@Url.Action("Login","Auth")">ავტორიზაცია</a>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
