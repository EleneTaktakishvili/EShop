@model eShop.Admin.Models.CategoryModel

<form  method="post" asp-controller="Category" asp-action="SaveUpdate">
    <div class="form-group row">      
        <div class="col-md-12">
            <input  type="hidden" asp-for="Id" />
            <input type="text" autocomplete="off" asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">დახურვა</button>
        <button type="submit" class="btn btn-success" >შენახვა</button>
    </div>
</form>




