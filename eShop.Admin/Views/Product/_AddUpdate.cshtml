@model eShop.Admin.Models.ProductModel

    <form enctype="multipart/form-data" asp-controller="Product" asp-action="SaveUpdate" method="post" >

        <div class="form-group row">
            <div class="col-md-12">
                <input type="hidden" asp-for="Id" name="Id" />
                <input type="text" autocomplete="off" asp-for="Name" name="Name" class="form-control" placeholder="დასახელება">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-6">
                <input type="text" autocomplete="off" asp-for="Price" name="Price" class="form-control" placeholder="ფასი">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <input type="text" autocomplete="off" asp-for="Quantity" name="Quantity" class="form-control" placeholder="რაოდენობა">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-12">
                <textarea class="form-control" id="Description" rows="3" placeholder="აღწერა"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <select class="selectpicker col-md-12" multiple id="categories"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <div class="custom-file">
                    <input asp-for="Photos" multiple class="form-control custom-file-input">
                    <label class="custom-file-label">Choose File...</label>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">დახურვა</button>
            <button type="submit" class="btn btn-success" onclick="AddUpdatePost('Product/SaveUpdate')">შენახვა</button>
            <button type="submit" class="btn btn-primary">Create</button>

        </div>
</form>
        <script>
            $(document).ready(function () {

                $('select').selectpicker();
            });
        </script>
